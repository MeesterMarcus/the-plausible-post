<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{{ title }} — {{ site.title }}</title>
    <meta name="description" content="{{ description or site.description }}" />
    <link rel="stylesheet" href="/assets/css/styles.css" />
  </head>
  <body>
    {% include "header-nav.njk" %}
 
    <main class="container content" role="main">
      <article class="article">
        <header class="article-header">
          <h1 class="article-title">{{ title }}</h1>
          <p class="article-meta">
            <time datetime="{{ date | htmlDateString }}">{{ date | readableDate }}</time>
            {% if author %} — <span class="byline">{{ author }}</span>{% endif %}
            {% if tags %} — <span class="tags">{% for t in tags %}<a href="/tags/{{ t | slug }}/">{{ t }}</a>{% if not loop.last %}, {% endif %}{% endfor %}</span>{% endif %}
          </p>
        </header>
 
        {% if image %}
        <figure class="article-hero">
          <img src="{{ image }}" alt="{{ imageAlt or title }}" />
          {% if imageCredit %}<figcaption class="credit">{{ imageCredit }}</figcaption>{% endif %}
        </figure>
        {% endif %}
 
        <div class="article-body">
          {{ content | safe }}
        </div>
      </article>
    </main>
 
    <footer class="site-footer container">
      <p>&copy; {{ "now" | date("yyyy") }} {{ site.title }}.</p>
      <p class="small muted">Disclaimer: All articles on this site are satire and not factual.</p>
      <p class="small muted">
        <a href="/privacy/" class="small muted">Privacy Policy</a> &middot;
        <a href="/terms/" class="small muted">Terms & Conditions</a>
      </p>
    </footer>
    <script src="/assets/js/search.js"></script>
  </body>
</html>