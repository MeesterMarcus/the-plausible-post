<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{{ title }} — {{ site.title }}</title>
    <meta name="description" content="{{ description or site.description }}" />
    <link rel="stylesheet" href="/assets/css/styles.css" />
  </head>
  <body>
    <header class="site-header">
      <div class="container header-inner">
        <a class="masthead" href="/" aria-label="{{ site.title }}">
          <img src="/assets/images/logo.png" alt="{{ site.title }} logo" class="site-logo" />
          <div class="brand">
            <h1 class="site-title">{{ site.title }}</h1>
            <p class="site-tagline">{{ site.description }}</p>
          </div>
        </a>
      </div>
      <nav class="main-nav container" role="navigation" aria-label="Main">
        <a href="/">Home</a>
        <a href="/tags/">Tags</a>
        <a href="/about/">About</a>
      </nav>
    </header>

    <main class="container content" role="main">
      <article class="article">
        <header class="article-header">
          <h1 class="article-title">{{ title }}</h1>
          <p class="article-meta">
            <time datetime="{{ date | htmlDateString }}">{{ date | readableDate }}</time>
            {% if author %} — <span class="byline">{{ author }}</span>{% endif %}
            {% if tags %} — <span class="tags">{% for t in tags %}<a href="/tags/{{ t | slug }}/">{{ t }}</a>{% if not loop.last %}, {% endif %}{% endfor %}</span>{% endif %}
          </p>
        </header>

        {% if image %}
        <figure class="article-hero">
          <img src="{{ image }}" alt="{{ imageAlt or title }}" />
          {% if imageCredit %}<figcaption class="credit">{{ imageCredit }}</figcaption>{% endif %}
        </figure>
        {% endif %}

        <div class="article-body">
          {{ content | safe }}
        </div>
      </article>
    </main>

    <footer class="site-footer container">
      <p>&copy; {{ "now" | date("yyyy") }} {{ site.title }}. All satire intended.</p>
    </footer>
  </body>
</html>