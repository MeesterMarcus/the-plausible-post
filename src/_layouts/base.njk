<!doctype html>
<html lang="en">
  <head>
    {% include "head.njk" %}
  </head>
  <body>
    {% include "header-nav.njk" %}
 
    <main class="container content" role="main">
      {{ content | safe }}
    </main>
 
    <div class="section-separator container"></div>
  
    {% include "footer.njk" %}

    <script>
      (function () {
        // Redirect identity links (invite or confirmation) that land on the site root
        // (e.g. /#invite_token=... or /#confirmation_token=...) to the CMS admin page
        // so Netlify Identity can finish the flow in the admin UI.
        try {
          var hash = window.location.hash || "";
          var needsRedirect = /invite_token=|confirmation_token=/.test(hash);
          if (needsRedirect) {
            // Only redirect if we're not already on /admin
            if (!window.location.pathname.startsWith("/admin")) {
              // Preserve the hash when redirecting to /admin/
              window.location.replace("/admin/" + hash);
            }
          }
        } catch (e) {
          // Fail silently; this script is non-critical
          console && console.warn && console.warn("Identity redirect failed", e);
        }
      })();
    </script>

    <script src="/assets/js/search.js"></script>
  </body>
</html>