{% set breakingArticle = collections.articles | find({ "data.isBreaking": true }) %}
{% if breakingArticle %}
<div class="breaking container">
  <span class="breaking-label">BREAKING</span>
  <a href="{{ breakingArticle.url }}" class="breaking-text">{{ breakingArticle.data.title }}</a>
</div>
{% endif %}